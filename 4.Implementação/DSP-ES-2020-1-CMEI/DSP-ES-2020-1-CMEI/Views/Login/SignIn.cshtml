@model DSP_ES_2020_1_CMEI.Models.LoginModel

@{
    ViewBag.Title = "SignIn";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="form-signin">
    <svg width="5em" height="5em" viewBox="0 0 16 16" class="bi bi-people-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H7zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm-5.784 6A2.238 2.238 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.325 6.325 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1h4.216zM4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5z" />
    </svg>

    <h4 class="mb-3 font-weight-normal">DSP-ES-2020-1-CMEI</h4>
    <i>Fazer login</i>
    <br /><br />

    @using (Html.BeginForm("SignIn", "Login", FormMethod.Post, new { id = "formSignIn" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @style = "display:inline" })

        <!--Alert Messages-->
        @Html.Partial("~/Views/Shared/_Message.cshtml")

        <div class="form-row">
            <div class="col-md-12">
                <label for="inputEmail" class="sr-only">Email</label>
                @Html.EditorFor(model => model.emailAccess, new { HtmlAttributes = new { @class = "form-control", @placeholder = "Email", @required = "", @autofocus = "" } })
                <label for="inputPassword" class="sr-only">Senha</label>
                @Html.EditorFor(model => model.passwordAccess, new { HtmlAttributes = new { @class = "form-control", @type = "password", @placeholder = "Senha", @required = "" } })
            </div>
        </div>

        <div class="form-row">
            <div class="col-md-12">
                <button class="btn btn-lg btn-primary btn-block" type="submit">Entrar</button>
            </div>
        </div>
    }
</div>
