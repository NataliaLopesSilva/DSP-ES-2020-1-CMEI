@model DSP_ES_2020_1_CMEI.Models.EvaluateStudentModel

@{
    ViewBag.Title = "ApplyEvaluation";
}

@using (Html.BeginForm("ApplyEvaluation", "EvaluateStudent", FormMethod.Post, new { id = "formEvaluation" }))
{
    <input name="idLoginAccess" id="idLoginAccess" style="display:none" value="@Model.idLoginAccess" />
    <input name="idClassroom" id="idClassroom" style="display:none" value="@Model.idClassroom" />
    <input name="idEvaluateStudent" id="idEvaluateStudent" style="display:none" value="@Model.idEvaluateStudent" />

    <br />
    <h3><i class="fas fa-user"></i> Avaliação do Aluno</h3>

    <div class="panel">
        <div class="panel-body">
            <div style="padding-left:30px; padding-right:30px">
                <input name="idStudent" id="idStudent" style="display:none" value="@Model.idStudent" />

                <p><strong>N° matrícula:</strong> @Model.StudentModel.registrationNumber</p>
                <p><strong>Nome:</strong> @Model.StudentModel.nameStudent</p>
                <p><strong>Turma:</strong> @Model.ClassroomModel.nameClassroom</p>
            </div>
        </div>
    </div>

    <div class="panel">
        <div class="panel-body">
            <div style="padding-left:30px; padding-right:30px">
                <table class="table table-hover" id="tblEvaluateStudentGrade">
                    <thead>
                        <tr>
                            <th class="bg-info">#</th>
                            <th class="bg-info">Cód</th>
                            <th class="bg-info">Descrição</th>
                            <th class="bg-info">Nota</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.listEvaluateStudentGrade.Count; i++)
                        {
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@Model.listEvaluateStudentGrade[i].idTeachingPlan</td>
                                <td>@Model.listEvaluateStudentGrade[i].TeachingPlan.activityDescription</td>
                                <td>@Model.listEvaluateStudentGrade[i].grade</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <a href="javascript:history.back()" class="btn btn-lg btn-default pull-right">
        Voltar para Avaliações
    </a>
}

<script src="~/Scripts/Project/ApplyEvaluation.js"></script>
