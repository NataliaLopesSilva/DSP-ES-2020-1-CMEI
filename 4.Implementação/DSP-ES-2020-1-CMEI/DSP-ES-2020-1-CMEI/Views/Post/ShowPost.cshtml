@model _3_Domain.Post

@{
    ViewBag.Title = "ShowPost";
}

<br/>

<div class="container">
    <div class="well">
        <div class="media">
            <a class="pull-left" href="#">
                @if (Model.imageId != null)
                {
                    <img src="@Url.Action("RenderPostImage", "Post", new {@picId = Model.imageId})" width="177" alt="@Model.title"/>
                }
                else
                {
                    <img src="~/Images/cmei1.jpg" class="img-responsive"/>
                }
            </a>
            <div class="media-body">
                <h4 class="media-heading"><strong>@Model.title</strong></h4>
                <p class="text-right">@Model.createdBy</p>
                <p>
                    @Model.content
                </p>
                <ul class="list-inline list-unstyled">
                    <li>
                        <span>
                            <i class="glyphicon glyphicon-calendar"></i> @($"{Model.createdAt:dd/MM/yyyy}")
                        </span>
                    </li>
                    <li>|</li>
                    <span><i class="glyphicon glyphicon-comment"></i> 2 comments</span>
                    <li>|</li>
                    <li>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star-empty"></span>
                    </li>
                    <li>|</li>
                    <li>
                        <!-- Use Font Awesome http://fortawesome.github.io/Font-Awesome/ -->
                        <span>
                            <i class="fa fa-facebook-square"></i>
                        </span>
                        <span>
                            <i class="fa fa-twitter-square"></i>
                        </span>
                        <span>
                            <i class="fa fa-google-plus-square"></i>
                        </span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>